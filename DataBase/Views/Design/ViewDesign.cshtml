
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title> 
    <style>
        * {
            margin:0px;
            padding:0px;
        }

        #result {
            height:100%;
            width:100%; 
        }
        textarea {
            width:100%;
            height:99%;    
            border:none;
            overflow:auto;
       }
    </style>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script> 
    <script>
        $(function () {
            changeHeight();
            $(window).resize(changeHeight);

            function changeHeight() {
                var pageHeight = $(window).height();
                $("#result").height(pageHeight);
            }
        })
   </script>
</head>
<body>
    <div id="result"> 
        <textarea>@Html.Raw(ViewBag.SQL)</textarea>
    </div>
</body>
</html>
